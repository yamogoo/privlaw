// News
section.section
    div.section-container
        //Nav Line
        div.nav-line
            ul.nav-line-container
                li.nav-line__item
                    a(href="index.html") Главная
                li.nav-line__item
                    a(href="codification-council.html") Совет по кодификации
                li.nav-line__item
                    a(href="codification-council_.html") Материалы работы Совета
                li.nav-line__item
                    a(href="codification-council_expert-opinions.html") Экспертные заключения
                li.nav-line__item
                    a(href="codification-council_expert-opinions.html") 2000
        //Nav Line
        // Section Nav
        div.section-nav-wrapper
            div.section-nav--primary
                ul.section-nav-container
                    li.section-nav__item
                        a(href="codification-council.html") О Совете
                    li.section-nav__item
                        a(href="codification-council_working-groups.html") Рабочие группы
                    li.section-nav__item
                        a(href="codification-council_meetings-of-the-council.html") Заседания Совета
                    li.section-nav__item.active
                        a(href="codification-council_expert-opinions.html") Материалы работы Совета
            div.section-nav--secondary
                ul.section-nav-container
                    li.section-nav__item.active
                        a(href="codification-council_expert-opinions.html") Экспертные заключения
                    li.section-nav__item
                        a(href="codification-council_legislative-development-concepts.html") Концепции развития законодательства
                    li.section-nav__item
                        a(href="codification-council_draft-amendments-to-the-civil-code-of-the-russian-federation.html") Проекты изменений ГК РФ
                
        // Section Nav
        // Section Header
        div.section-header
            h1.section-title Экспертные заключения
        // Section Nav
        div.section-nav-wrapper
            div.section-nav--tritic
                ul.section-nav-container
                    each val in [2000, 2001, 2002, 2003, 2004, 2005, 2006, 2007, 2008, 2009, 2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020, 2021, 2022]
                        if val == 2000
                            li.section-nav__item.active
                                a(href=`rshchp_graduates_${val}.html`)=val
                        else
                            li.section-nav__item
                                a(href=`rshchp_graduates_${val}.html`)=val
        // Filter Search
        div.filter-wrapper
            div.filter-search#filter-search
                div.filter-search-container
                    input(id="search" name="search" placeholder="Поиск..." type="text" data-list=".documents-container" data-toggle="hideseek")
                    div.filter-search-icon
        // Filter Search     
        // Section Header
        div.section-body
            div.documents
                div.documents-container
                    // Items
                    -var i = 0;
                    -var items = ["январь", "февраль", "март", "апрель", "май", "июнь", "июль", "август", "сентрябрь", "октябрь", "ноябрь", "декабрь"]
                    while i < 1
                        -var size = "PDF " + (12 + i++) + " КБ"
                        each item in items
                            -var year = "Экспертные заключения за " + item
                            div.documents__item
                                a.documents__item-container(href="/")
                                    div.documents__item-icon
                                        img(src="./assets/images/docs/icon-document-pdf.png", alt="")
                                    div.documents__item-content
                                        div.documents__item-content-group
                                            h3.documents__item-title=year
                                            span.documents__item-size=size
                                        span.documents__item-helper-icon.icon-download
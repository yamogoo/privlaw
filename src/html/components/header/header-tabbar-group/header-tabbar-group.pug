div.tabbar.app-header-tabbar
    // Search Button
    div.tab-button-group.app-header__tabbar-search
        button.tab-button.app-search-button#app-search-button
            span.tab-button-content
                div.search-button-icon
    // Controllers
    div.tab-button-group.app-header__tabbar-controllers
        button.tab-button.poor-vision
            span.tab-button-container
                a.tab-button-box(href="#poor-vision")
                    span.tab-button-content
                        span.icon-poor-vision
        button.tab-button.lang
            div.dropdown-selector
                div.dropdown-selector-container
                    div.dropdown-selector-button
                        p Ru
                    ul.dropdown-selector-list
                        li.active
                            a(href="#ru") Ru
                        li
                            a(href="#en") En
        button.tab-button.login.last
            a.tab-button-content(href="login.html")
                span.icon-lock
                span Войти
    // Search Toggle
    div.tab-button-group.app-header__tabbar-menu-toggle-button
        button.tab-button.last#app-menu-toggle-button
            span.tab-button-content
                div(style="width:32px; height: 32px;")#app-menu-toggle-button-icon
mixin items(...items)

    mixin nestedItem(href, title)
        li.navigation-menu__list-item
            a(href=href class="navigation-menu__list-item-link")=title

    mixin item(href, title, nested)
        a(href=href class="navigation-menu__list-item-link")=title
        div.navigation-menu__list-item-underline

    //

    each item in list
        if item.nested[0].title.length > 0
            li.navigation-menu__list-item.expansion
                +item(item.href, item.title)
                ul.navigation-menu__list
                    //- div.navigation-menu__list-item-group-container
                    each nestedItem in item.nested
                        +nestedItem(nestedItem.href, nestedItem.title)
        else 
            li.navigation-menu__list-item
                +item(item.href, item.title)

